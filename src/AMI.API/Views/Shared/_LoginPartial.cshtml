<ul class="navbar-nav">
    @if (Context.User.Identity.IsAuthenticated)
    {
    <li class="nav-item">
        <a class="nav-link text-dark" href="#">@User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Login", "Account", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
    }
    else
    {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
    </li>
    }
</ul>